@model RoleTopMVC.ViewModels.EventoViewModel

    <main>
        <h2> Contrate-nos ! </h2>

        <form method="POST" action='@Url.Action("Registrar","Evento")'>
            <section id="dados">
                <div>
                    <label for="nome"> Nome Completo</label>
                    <input id="nome" type="text" value="@Model.Cliente.Nome" name="nome" required/>
                </div>

                <div>
                    <label for="cpf"> CPF</label>
                    <input id="cpf" type="text" value="@Model.Cliente.Cpf" name="cpf" required/>
                </div>

                <div>
                    <label for="telefone"> Telefone </label>
                    <input id="telefone" type="text" placeholder="12 12345 6789" value="@Model.Cliente.Telefone" name="telefone" required/>
                </div>

                <div>
                    <label for="email"> E-mail </label>
                    <input id="email" type="email" value="@Model.Cliente.Email" name="email" required/>
                </div>

                <div>
                    <label for="empresa"> Empresa </label>
                    <input id="empresa" type="text" value="@Model.Cliente.Empresa" name="empresa" />
                </div>

                <div>
                    <label for="publico"> Público Estimado </label>
                    <input id="publico" type="text" name="publico" required/>
                </div>

                <div>
                    <label for="evento"> Tipo de Evento </label>
                    <input id="evento" type="text" name="evento" required/>
                </div>

                <div>
                    <label for="inicio"> Data de Início </label>
                    <input id="inicio" type="datetime-local" name="inicio" required/>
                </div>

                <div>
                    <label for="termino"> Data de Término </label>
                    <input id="termino" type="datetime-local" name="termino" required/>
                </div>

                <div class="serviços">
                    <div>
                        <label for="iluminacao"> Iluminação </label>
                        <select id="iluminacao" name="iluminacao" required>
                            <option value="" disabled selected> Selecione </option>
                            <option value="NAO"> Não </option>
                            <option value="P"> P </option>
                            <option value="M"> M </option>
                            <option value="G"> G </option>
                        </select>
                    </div>

                    <div>
                        <label for="som"> Som </label>
                        <select id="som" name="som" required>
                            <option value="" disabled selected> Selecione </option>
                            <option value="NAO"> Não </option>
                            <option value="P"> P </option>
                            <option value="M"> M </option>
                            <option value="G"> G </option>
                        </select>
                    </div>

                    <div>
                        <label for="limpeza"> Limpeza </label>
                        <select id="limpeza" name="limpeza" required>
                            <option value="" disabled selected> Selecione </option>
                            <option value="NAO"> Não </option>
                            <option value="P"> P </option>
                            <option value="M"> M </option>
                            <option value="G"> G </option>
                        </select>
                    </div>
                </div>
            </section>

            <section id="pagamento">
                <h3> Forma de pagamento</h3>
                <div>
                    <label for="pagamento"> Pagamento </label>
                    <select id="pagamento" name="pagamento" required>
                        <option value="" disabled selected> Selecione </option>
                        <option value="boleto"> Boleto </option>
                        <option value="cartao1x"> Cartão 1x </option>
                        <option value="cartao2x"> Cartão 2x </option>
                        <option value="cartao3x"> Cartão 3x </option>
                    </select>
                </div>

                <div>
                    <label for="num-cartao"> Número do Cartão </label>
                    <input id="num-cartao" type="text" name="ncartao" required/>
                </div>

                <div>
                    <label for="nome-impresso"> Nome impresso</label>
                    <input id="nome-impresso" type="text" name="nome-impresso" required/>
                </div>

                <div>
                    <label for="vencimento"> Vencimento </label>
                    <input id="vencimento" type="text" placeholder="11/2000" name="vencimento" required/>
                </div>

                <div>
                    <label for="cvv"> CVV </label>
                    <input id="cvv" type="text" maxlength="3" name="cvv" required/>
                </div>

                <input type="submit" value="Contratar !" />
            </section>
        </form>

        <h4> Termos e Condições</h4>

        <div id="termos">
            <ol>
                <li>Proposta sujeita a análise para aceitação do evento. Caso recusado extornamos o pagamento.</li>
                <li>Cancelamentos até 3 dias do evento não será cobrado multa rescisória.</li>
                <li>Cancelando 3 dias antes do evento ou depois, será cobrado uma multa rescisória de 50% do valor total
                    do contrato.</li>
            </ol>
        </div>


    </main>
